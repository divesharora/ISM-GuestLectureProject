<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <title>Document</title>
  </head>
  <body>
    <div class="form">
      Account Type
      <input type="number" id="type" placeholder="type" /><br /><br />
      Account info<input
        type="text"
        name="info"
        id="info"
        placeholder="Info"
      /><br /><br />
      Add Screenshots
      <input id="file" type="file" onchange="storeImages(event)" multiple />
      Description<input
        type="text"
        name="description"
        id="description"
        placeholder="Description"
      /><br /><br />
      <button onclick="submitForm()">Submit</button>
    </div>
  </body>
  <script>
    var d = {};
    d.images = [];
    function storeImages(event) {
      var files = event.target.files;
      for (var i = 0; i < files.length; i++) {
        f = files[i];
        var reader = new FileReader();
        reader.onload = (function (theFile) {
          return function (e) {
            d.images.push(e.target.result);
          };
        })(f);
        t = reader.readAsDataURL(f);
        d.images.push(t);
      }
      d.images = d.images.filter(function (element) {
        return element !== undefined;
      });
    }

    function submitForm() {
      d.accountType = Number($("#type").val());
      d.accountInfo = $("#info").val();
      d.description = $("#description").val();
      console.log(d);

      var settings = {
        url: "/report",
        method: "POST",
        timeout: 0,
        headers: {
          "Content-Type": "application/json",
        },
        data: JSON.stringify(d),
      };

      $.ajax(settings).done(function (response) {
        window.location.href =
          "C:\Users\DELL\Desktop\ISM GL Project\views\result.ejs";
      });
    }
  </script>
</html>
